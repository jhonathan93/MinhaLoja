<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- START CUSTOM LOGGER -->
    <virtualType name="Jhonathan\Whatsapp\Model\Method\VirtualDebug" type="Magento\Framework\Logger\Handler\Base">
        <arguments>
            <argument name="fileName" xsi:type="string">/var/log/whatsapp.log</argument>
        </arguments>
    </virtualType>
    <virtualType name="Jhonathan\Whatsapp\Model\Method\VirtualLogger" type="Magento\Framework\Logger\Monolog">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="debug" xsi:type="object">Jhonathan\Whatsapp\Model\Method\VirtualDebug</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Jhonathan\Whatsapp\Model\Method\Logger">
        <arguments>
            <argument name="logger" xsi:type="object">Jhonathan\Whatsapp\Model\Method\VirtualLogger</argument>
        </arguments>
    </type>
    <!-- END CUSTOM LOGGER -->
</config>
